<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.fairingstudio.kuayue_website.dao.UserFileDao">

    <!-- 查询所有的储存文件 -->
    <select id="getAllFiles" resultType="org.fairingstudio.kuayue_website.entity.UserFile">
        select * from t_files
    </select>

    <!-- 根据用户ID查询出该用户的所有的储存文件 -->
    <select id="getFilesByUserId" resultType="org.fairingstudio.kuayue_website.entity.UserFile">
        select * from t_files where userId=#{id}
    </select>

    <!-- 保存文件 -->
    <insert id="SaveFile">
        INSERT INTO t_files
        VALUES (#{id},
                #{oldFileName},#{newFileName},#{ext},
                #{path},#{size},#{type},#{isImg},
                #{downCounts},#{uploadTime},#{userId});
    </insert>

    <!-- 根据文件对应的id查询文件 -->
    <select id="getFilesById" resultType="org.fairingstudio.kuayue_website.entity.UserFile">
        select * from t_files where id = #{id}
    </select>

    <!-- 更新文件的下载次数 -->
    <update id="update">
        update t_files
        set downCounts = #{downCounts}
        where id = #{id}
    </update>

    <!--根据Id删除记录-->
    <delete id="delete">
        delete from t_files where id = #{id}
    </delete>

</mapper>


