<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.fairingstudio.kuayue_website.dao.UserDao">

    <select id="login" resultType="org.fairingstudio.kuayue_website.entity.User">
        select * from t_user where username=#{username} and password=#{password}
    </select>

    <select id="findUserByName" resultType="org.fairingstudio.kuayue_website.entity.User">
        select * from t_user where username=#{username}
    </select>

</mapper>


